{
    "compilerOptions": {
      "target": "es2022",
      "module": "commonjs",
      "lib": ["es2022"],
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "sourceMap": true,
      "baseUrl": ".",
      "paths": {
        "@src/*": ["src/*"],        
      },
      "emitDecoratorMetadata": true, //TypeORM
      "experimentalDecorators": true //TypeORM
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }
  